<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MountainTrailsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MountainTrailsApp"
    Shell.FlyoutBehavior="Disabled"
    Title="MountainTrailsApp">

    <Shell.ToolbarItems>
        <ToolbarItem Text="Logout"
                     Clicked="OnLogoutClicked"
                     Priority="0"
                     Order="Primary" />
    </Shell.ToolbarItems>

    <TabBar>
        <ShellContent Route="trasee"
                  Title="Trasee"
                  ContentTemplate="{DataTemplate local:TrailsEntryPage}" />

        <ShellContent Route="regiuni"
                  Title="Regiuni"
                  ContentTemplate="{DataTemplate local:RegionPage}" />

        <ShellContent Route="despre"
                  Title="Despre"
                  ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>
</Shell>
