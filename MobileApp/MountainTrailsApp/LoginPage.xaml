<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountainTrailsApp.LoginPage"
             Title="Autentificare">

    <VerticalStackLayout Margin="20" Spacing="12">
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Parolă" IsPassword="True"/>

        <Button Text="Login" Clicked="OnLoginClicked"/>
        <Button Text="Creează cont" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>
