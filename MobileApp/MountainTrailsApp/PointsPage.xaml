<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountainTrailsApp.PointsPage"
             Title="Puncte de interes">

    <VerticalStackLayout Margin="20" Spacing="10">

        <Label x:Name="trailNameLabel"
               FontSize="18"
               FontAttributes="Bold" />

        <Button Text="AdaugÄƒ punct"
                Clicked="OnAddPointClicked" />

        <ListView x:Name="pointsListView"
                  ItemSelected="OnPointSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding Type}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>
