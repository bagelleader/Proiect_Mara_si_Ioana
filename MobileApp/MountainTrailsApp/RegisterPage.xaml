<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountainTrailsApp.RegisterPage"
             Title="Creare cont">

    <VerticalStackLayout Margin="20" Spacing="12">
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Parolă" IsPassword="True"/>
        <Entry x:Name="confirmEntry" Placeholder="Confirmă parola" IsPassword="True"/>

        <Button Text="Creează cont" Clicked="OnCreateClicked"/>
    </VerticalStackLayout>
</ContentPage>
