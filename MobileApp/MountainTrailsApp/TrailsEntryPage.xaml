<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountainTrailsApp.TrailsEntryPage"
             Title="Trasee">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="AdaugÄƒ traseu"
                     Clicked="OnAddTrailClicked" />
        <ToolbarItem Text="Doar favorite"
                 Clicked="OnToggleFavoritesClicked" />
    </ContentPage.ToolbarItems>

    <ListView x:Name="trailsListView"
              Margin="20"
              ItemSelected="OnTrailSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}"
                          Detail="{Binding Region}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
