@page "{id:int}"
@model MuntiRomania.Pages.MountainRanges.DeleteModel

<h1>Delete Mountain Range</h1>

<h4>Are you sure you want to delete this?</h4>

<div>
    <strong>@Model.MountainRange.Name</strong>
</div>

<form method="post">
    <input type="hidden" asp-for="MountainRange.MountainRangeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
